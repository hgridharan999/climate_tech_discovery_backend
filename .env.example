# Climate Search API Configuration

# Database
DATABASE_PATH=data/climate_startups.db

# Search Indexes
FAISS_INDEX_PATH=data/faiss_index.bin
EMBEDDINGS_PATH=data/embeddings/all_embeddings.npy
ID_MAPPING_PATH=data/embeddings/startup_id_mapping.json

# API Keys (Optional - for scraping)
CRUNCHBASE_API_KEY=your_api_key_here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Server
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Search Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_BATCH_SIZE=16
SEMANTIC_WEIGHT=0.6
DEFAULT_TOP_K=20
MAX_RESULTS_PER_VERTICAL=3

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60
